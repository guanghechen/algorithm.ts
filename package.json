{
  "name": "@algorithm.ts/root",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/algorithm.ts/tree/release-2.x.x"
  },
  "homepage": "https://github.com/guanghechen/algorithm.ts/tree/release-2.x.x#readme",
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    ":publish": "yarn test:coverage && node --experimental-vm-modules node_modules/.bin/lerna publish",
    ":upgrade": "yarn upgrade-interactive && run-s clean format build test",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lintfix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lintfix": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:dev",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "run:ts": "node -r ts-node/register -r tsconfig-paths/register",
    "test": "lerna run test --concurrency 1",
    "test:coverage": "lerna run --concurrency 1 test -- --coverage",
    "test:update": "lerna run --concurrency 1 test -- -u",
    "update:changelog": "gitmoji-changelog update",
    "version": "yarn && git stage yarn.lock"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/eslint-parser": "7.19.1",
    "@guanghechen/eslint-config": "^3.0.0",
    "@guanghechen/eslint-config-ts": "^3.0.0",
    "@guanghechen/jest-config": "^3.0.0",
    "@guanghechen/rollup-config": "^3.0.0",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "cross-env": "^7.0.3",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "gitmoji-changelog": "2.3.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "^29.3.1",
    "lerna": "6.3.0",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "2.8.2",
    "rimraf": "^3.0.2",
    "rollup": "^3.9.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.3.1"
}
