{
  "name": "@algorithm.ts/root",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/algorithm.ts.git"
  },
  "homepage": "https://github.com/guanghechen/algorithm.ts/#readme",
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn test && lerna publish",
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lint:fix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lint:fix": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "is-ci || yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna exec 'echo && pwd && yarn test' --concurrency 1",
    "test:coverage": "lerna exec 'echo && pwd && yarn test --coverage' --concurrency 1",
    "test:update": "lerna exec 'echo && pwd && yarn test -u' --concurrency 1",
    "update:changelog": "gitmoji-changelog update",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.14.8",
    "@babel/eslint-parser": "7.14.9",
    "@guanghechen/eslint-config": "^1.8.0",
    "@guanghechen/eslint-config-ts": "^1.8.0",
    "@guanghechen/jest-config": "^1.8.0",
    "@guanghechen/rollup-config": "^1.8.0",
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "26.0.24",
    "@types/node": "16.4.10",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-prettier": "3.4.0",
    "fs-extra": "^10.0.0",
    "gitmoji-changelog": "2.2.1",
    "husky": "7.0.1",
    "is-ci": "3.0.0",
    "jest": "27.0.6",
    "lerna": "4.0.0",
    "lint-staged": "11.1.1",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "rollup": "2.55.1",
    "ts-jest": "27.0.4",
    "ts-node": "10.1.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5",
    "yarn-deduplicate": "3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  }
}
