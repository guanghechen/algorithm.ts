{
  "name": "@algorithm.ts/root",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/algorithm.ts"
  },
  "homepage": "https://github.com/guanghechen/algorithm.ts",
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    ":publish": "yarn test:coverage && lerna publish",
    ":upgrade": "yarn upgrade-interactive && run-s clean format build test",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lintfix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lintfix": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:dev",
    "postinstall:dev": "is-ci || husky",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "run:ts": "node -r ts-node/register -r tsconfig-paths/register",
    "test": "lerna run test --concurrency 1",
    "test:coverage": "lerna run --concurrency 1 test -- --coverage",
    "test:update": "lerna run --concurrency 1 test -- -u",
    "version": "yarn && ghc-doc-link-rewrite && git stage -u yarn.lock packages/**/package.json packages/**/*.md"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.23.9",
    "@guanghechen/eslint-config": "^6.0.0-alpha.1",
    "@guanghechen/eslint-config-ts": "^6.0.0-alpha.6",
    "@guanghechen/jest-config": "^6.0.0-alpha.2",
    "@guanghechen/rollup-config": "^6.0.0-alpha.3",
    "@guanghechen/script-doc-link": "^6.0.0-alpha.12",
    "@types/jest": "29.5.12",
    "@types/node": "18.19.17",
    "cross-env": "^7.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.11",
    "is-ci": "3.0.1",
    "jest": "^29.7.0",
    "lerna": "8.1.2",
    "lint-staged": "15.2.2",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.3.1"
}
