{
  "name": "@algorithm.ts/root",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/algorithm.ts/tree/release-2.x.x"
  },
  "homepage": "https://github.com/guanghechen/algorithm.ts/tree/release-2.x.x#readme",
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn test:coverage && lerna publish",
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lintfix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lintfix": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "is-ci || yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "run:ts": "node -r ts-node/register -r tsconfig-paths/register",
    "test": "lerna exec 'echo && pwd && yarn test' --concurrency 1",
    "test:coverage": "lerna exec 'echo && pwd && yarn test --coverage' --concurrency 1",
    "test:update": "lerna exec 'echo && pwd && yarn test -u' --concurrency 1",
    "update:changelog": "gitmoji-changelog update",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.20.7",
    "@babel/eslint-parser": "7.19.1",
    "@guanghechen/eslint-config": "^3.0.0-alpha.0",
    "@guanghechen/eslint-config-ts": "^3.0.0-alpha.0",
    "@guanghechen/jest-config": "^3.0.0-alpha.0",
    "@guanghechen/rollup-config": "^3.0.0-alpha.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "cross-env": "7.0.3",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.7",
    "eslint-plugin-prettier": "4.2.1",
    "fs-extra": "^10.1.0",
    "gitmoji-changelog": "2.3.0",
    "husky": "8.0.2",
    "is-ci": "3.0.1",
    "jest": "29.3.1",
    "lerna": "6.3.0",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "rollup": "3.9.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.1",
    "typescript": "4.9.4",
    "yarn-deduplicate": "6.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  }
}
